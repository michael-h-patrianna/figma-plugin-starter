{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "react": [
        "./node_modules/preact/compat"
      ],
      "react-dom": [
        "./node_modules/preact/compat"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@ui/*": [
        "src/ui/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@figma",
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
